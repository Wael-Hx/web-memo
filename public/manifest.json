{
  "manifest_version": 2,
  "name": "Web Memo",
  "version": "1.0.9",
  "description": "create notes from selected text , save copied images and screenshots",
  "icons": {
    "16": "favicon.svg",
    "32": "favicon.svg",
    "48": "favicon.svg",
    "96": "favicon.svg"
  },
  "browser_action": {
    "default_icon": "favicon.svg",
    "default_title": "Web Memo"
  },
  "sidebar_action": {
    "default_icon": "favicon.svg",
    "default_title": "Web Memo",
    "default_panel": "sidebar/index.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "menus", "contextMenus", "tabs", "downloads"],
  "browser_specific_settings": {
    "gecko": {
      "id": "web-memo@w.h.com"
    }
  }
}
