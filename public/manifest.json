{
  "manifest_version": 2,
  "name": "web memo",
  "version": "1.0.0",
  "description": "save highlighted text on the web",
  "icons": {
    "16": "favicon.svg",
    "32": "favicon.svg",
    "48": "favicon.svg",
    "96": "favicon.svg"
  },
  "browser_action": {
    "default_icon": "favicon.svg",
    "default_title": "web memo",
    "default_popup": "popup/index.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "menus", "contextMenus", "tabs"]
}
