{
  "manifest_version": 2,
  "name": "web memo",
  "version": "1.0.0",
  "description": "save highlighted text on the web",
  "icons": {
    "48": "favicon.svg",
    "96": "favicon.svg"
  },
  "browser_action": {
    "default_icon": "favicon.svg",
    "default_title": "web memo"
  },
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage"]
}
