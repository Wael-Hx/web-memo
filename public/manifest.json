{
  "manifest_version": 3,
  "name": "Web Memo",
  "version": "1.2.1",
  "description": "Generate collections and notes from text selection / save copied images and screenshots",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-48x48.png",
    "64": "favicon-64x64.png",
    "96": "favicon-96x96.png",
    "128": "favicon-128x128.png"
  },
  "action": {
    "default_icon": "favicon-64x64.png",
    "default_title": "Web Memo",
    "default_popup": "sidebar/index.html",
    "browser_style": true
  },
  "background": {
    "service_worker": "background-scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-scripts/content-script.js"]
    }
  ],
  "permissions": ["storage", "contextMenus", "tabs", "downloads"]
}
