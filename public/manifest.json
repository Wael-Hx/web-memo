{
  "manifest_version": 2,
  "name": "Web Notes",
  "version": "1.0.0",
  "description": "save highlighted text on the web",
  "icons": {
    "16": "favicon.svg",
    "32": "favicon.svg",
    "48": "favicon.svg",
    "96": "favicon.svg"
  },
  "browser_action": {
    "default_icon": "favicon.svg",
    "default_title": "Web Notes",
    "default_popup": "popup/index.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "menus", "contextMenus", "tabs"],
  "browser_specific_settings": {
    "gecko": {
      "id": "web-notes@w.h.com",
      "strict_min_version": "85.0"
    }
  }
}
