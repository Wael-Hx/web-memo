{
  "manifest_version": 3,
  "name": "Web Memo",
  "version": "1.4.0",
  "description": "create notes and collections from websites you visit",
  "icons": {
    "16": "favicon.svg",
    "32": "favicon.svg",
    "48": "favicon.svg",
    "96": "favicon.svg"
  },
  "action": {
    "default_icon": "favicon.svg",
    "default_title": "Web Memo"
  },
  "sidebar_action": {
    "default_icon": "favicon.svg",
    "default_title": "Web Memo",
    "default_panel": "sidebar/index.html"
  },
  "background": {
    "scripts": ["background-scripts/background.js"]
  },
  "permissions": ["storage", "menus", "contextMenus", "tabs", "downloads"],
  "browser_specific_settings": {
    "gecko": {
      "id": "web-memo@w.h.com"
    }
  }
}
